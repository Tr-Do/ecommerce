<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/starability-grow.css">
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    <script src="/js/turnstile.js"></script>
    <script src="/js/addToCart.js" defer></script>

    <div class="row">
        <div class="col-12 col-lg-7 mt-5">
            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                    <% product.images.forEach((img, i)=> { %>
                        <div class="carousel-item <%= i===0?'active':''%>">
                            <img src="<%=img.showPage%>" class="d-block w-100" alt="/assets/banner.png">
                        </div>
                        <%})%>
                </div>
                <% if(product.images.length>1){ %>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="prev">
                        <i class="bi bi-chevron-left text-dark fs-1"></i>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="next">
                        <i class="bi bi-chevron-right text-dark fs-1"></i>
                        <span class="visually-hidden">Next</span>
                    </button>
                    <%}%>
            </div>
        </div>
        <div class="col-12 col-lg-5 mb-5">
            <div class="card-body">
                <h5 class="card-title text-center">
                    <%=product.name%>
                </h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">
                    <h5 class="mb-3">$<%=product.price%>
                    </h5>
                </li>

                <form action="/cart" id="addToCartForm" class="d-flex flex-column justify-content-center" method="POST">
                    <% if(variants && variants.length> 1) { %>
                        <div class="mt-3 d-flex justify-content-center gap-3">
                            <label for="variantId" class="form-label mt-2">Size:</label>
                            <div class="col-2">
                                <select name="variantId" id="variantId" class="form-select" required>
                                    <%variants.forEach(v=> {%>
                                        <option value="<%=v._id%>">
                                            <%=v.size%>
                                        </option>
                                        <%})%>
                                </select>
                            </div>
                        </div>

                        <%} else {%>
                            <input type="hidden" name="variantId"
                                value="<%=(variants && variants[0])?variants[0]._id:''%>">
                            <%}%>
                                <input type="hidden" name="productId" value="<%=product._id%>">
                                <button class="btn btn-success mt-3 mb-3" id="add-to-cart">Add to
                                    cart</button>
                                <div class="text-center d-none fst-italic" id="cartInfo">
                                    Item added to cart &#9989;
                                </div>
                                <div class="text-center d-none" style="color:red" id="cartHelp">
                                    Item is already in cart
                                </div>
                </form>

                <li class="list-group-item fw-bold mt-4">Product description</li>
                <li class="list-group-item">
                    <% product.description.split('\n').forEach(p=> { %>
                        <% if (p.trim()) { %>
                            <p class="mb-2">
                                <%= p %>
                            </p>
                            <% } %>
                                <% }) %>
                </li>
            </ul>
            <% if (currentUser && currentUser.role==='admin' ) { %>
                <div class="card-body">
                    <a class="card-link btn btn-warning" href="/products/<%=product._id%>/edit">Edit</a>
                    <form action="/products/<%=product._id%>?_method=DELETE" method="POST" style="display:inline;"
                        onsubmit="return confirm('Are you sure you want to delete this product?')">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <% } %>
        </div>
        <div class="row mt-5">
            <div class="col-12 col-lg-5">
                <% if (currentUser) { %>
                    <h2>Leave a review</h2>
                    <form action="/products/<%=product._id%>/reviews" method="POST" class="mb-3 validated-form mb-5"
                        novalidate>
                        <div class="mb-2">
                            <fieldset class="starability-grow">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                    checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                            <textarea class="form-control" rows="5" name="review[body]" id="body" required></textarea>
                            <div class="invalid-feedback">Required</div>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <div class="cf-turnstile" data-sitekey="0x4AAAAAACOFjC_zbncU7Qrj" data-theme="auto"
                                data-size="flexible" data-callback="onTurnstileSuccess"
                                data-error-callback="onTurnstileError" data-expired-callback="onTurnstileExpired"></div>
                            <button class="btn btn-success" id="submit-btn" disabled>Submit</button>
                        </div>
                    </form>
                    <%}%>
            </div>
            <div class="col-0 col-lg-3">
            </div>
            <div class="col-12 col-lg-4 d-flex flex-column">
                <% if (product.reviews.length>0) { %>
                    <h4 class="mb-3 fw-bold">Reviews</h4>
                    <div class="mb-5">
                        <% for (const review of product.reviews) { %>
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=review.author.username%>
                                    </h5>
                                    <p class="starability-result" data-rating="<%=review.rating%>">
                                    </p>
                                    <p>
                                        Review: <%=review.body%>
                                    </p>
                                    <% if (currentUser && ( review.author && review.author._id &&
                                        review.author._id.equals(currentUser._id)) || currentUser.role==='admin' ) {%>
                                        <form action="/products/<%=product._id%>/reviews/<%=review._id%>?_method=DELETE"
                                            method="POST"
                                            onsubmit="return confirm('Are you sure you want to delete this review?')">
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                        <%}%>
                                </div>
                            </div>
                            <%}%>
                    </div>
                    <%}%>
            </div>
        </div>
    </div>