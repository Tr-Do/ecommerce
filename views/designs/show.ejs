<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="d-flex justify-content-center">
            <div class="mb-5 mt-3">
                <div class="card" style="width: 30rem;">
                    <img src="<%=product.image%>" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title text-center">
                            <%=product.name%>
                        </h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">
                            $<%=product.price%>
                        </li>
                        <li class="list-group-item">
                            <%=product.description%>
                        </li>
                    </ul>
                    <div class="card-body">
                        <a class="card-link btn btn-warning" href="/product/<%=product._id%>/edit">Edit</a>
                        <form class="btn btn-danger" action="/product/<%=product.id%>?_method=DELETE" method="POST">
                            Delete
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>