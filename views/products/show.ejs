<% layout('layouts/boilerplate') %>
    <div class="d-flex justify-content-between">
        <div class="col-12 col-lg-7 d-flex justify-content-center">

            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                    <% product.images.forEach((img, i)=> { %>
                        <div class="carousel-item <%= i===0?'active':''%>">
                            <img src="<%=img.showPage%>" class="d-block w-100" alt="...">
                        </div>
                        <%})%>
                </div>
                <% if(product.images.length>1){ %>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="prev">
                        <i class="bi bi-chevron-left text-dark fs-1"></i>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                        data-bs-slide="next">
                        <i class="bi bi-chevron-right text-dark fs-1"></i>
                        <span class="visually-hidden">Next</span>
                    </button>
                    <%}%>
            </div>
        </div>
        <div class="col-12 col-lg-5 mb-5 " style="width: 30rem;">
            <div class="card-body">
                <h5 class="card-title text-center">
                    <%=product.name%>
                </h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">
                    <h5>$<%=product.price%>
                    </h5>
                </li>
                <% if (product.size.length>1) { %>
                    <li class="mt-3 d-flex justify-content-center gap-3">
                        <label class="form-label mt-2" for="size">Size:</label>
                        <div class="col-2">
                            <select class="form-select" name="prod  uct[size]" id="size">
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                                <option value="XL">XL</option>
                            </select>
                        </div>
                    </li>
                    <%}%>
                        <button class="btn btn-success mt-3 mb-3" id="add-to-cart">Add to cart</button>

                        <li class="list-group-item fw-bold">Product description</li>
                        <li class="list-group-item">

                            <% product.description.split('\n').forEach(p=> { %>
                                <% if (p.trim()) { %>
                                    <p class="mb-2">
                                        <%= p %>
                                    </p>
                                    <% } %>
                                        <% }) %>
                        </li>

            </ul>
            <% if (currentUser) { %>
                <div class="card-body">
                    <a class="card-link btn btn-warning" href="/productS/<%=product._id%>/edit">Edit</a>
                    <form action="/productS/<%=product.id%>?_method=DELETE" method="POST" style="display:inline;"
                        onsubmit="return confirm('Are you sure you want to delete this product?')">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <% } %>
        </div>
    </div>