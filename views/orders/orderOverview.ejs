<% layout('layouts/boilerplate') %>

    <div>
        <div><button onclick="location.href='/admin/dashboard'" class="mt-3 btn-success btn-lg">Dashboard</button></div>
        <h1 class="text-center my-4">Order Overview</h1>
    </div>
    <div class="table-wrap mb-5">
        <table class="text-center" id="orderList">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Product</th>
                    <th>Size</th>
                    <th>Email</th>
                    <th>Amount Paid</th>
                    <th>Order date</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(o=> { %>
                    <% o.items.forEach((item, idx)=> {%>
                        <tr>
                            <% if (idx===0) {%>
                                <td rowspan="<%=o.items.length%>">
                                    <a href="/admin/orders/<%=o.orderNumber%>" style="text-decoration: none;">
                                        <%=o.orderNumber%>
                                    </a>
                                </td>
                                <%}%>
                                    <td>
                                        <%=item.name%>
                                    </td>
                                    <td>
                                        <%=item.size%>
                                    </td>
                                    <% if (idx===0) {%>
                                        <td rowspan="<%=o.items.length%>">
                                            <%=o.email%>
                                        </td>
                                        <td rowspan="<%=o.items.length%>">
                                            <%= (o.payment?.status==='paid' )?
                                                ('$'+(((o.payment.amountCharged??o.payment.amountTotal)
                                                /100).toFixed(2))):'Unpaid' %>
                                        </td>
                                        <td rowspan="<%=o.items.length%>">
                                            <%=o.payment.emailSentAt%>
                                        </td>
                                        <%}%>
                        </tr>
                        <%})%>
                            <%})%>
            </tbody>
        </table>
    </div>
    <nav class="d-flex justify-content-center">
        <ul class="pagination">
            <!-- Previous -->
            <li class="mb-4 page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="<%= currentPage === 1 ? '#' : '?page=' + (currentPage - 1) %>">
                    Previous
                </a>
            </li>

            <!-- Page Numbers -->
            <% for (let i=1; i <=totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>">
                        <%= i %>
                    </a>
                </li>
                <% } %>
                    <!-- Next -->
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link"
                            href="<%= currentPage === totalPages ? '#' : '?page=' + (currentPage + 1) %>">
                            Next
                        </a>
                    </li>
        </ul>
    </nav>