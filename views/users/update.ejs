<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="d-flex justify-content-center align-items-center" id="updateForm">
            <div class="card shadow" id="signinCard">
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <h5 class="card-title">Update Password</h5>
                    </div>
                    <form action="/update" method="Get" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="password">New password</label>
                            <div class="input-group">
                                <input class="form-control password" type="password" minlength="6" maxlength="20"
                                    name="password" required>
                                <span class="input-group-text eyeIcon"><i class="bi bi-eye-slash-fill"></i></span>
                                <div class="invalid-feedback" id="passwordHelp">Password must be 6-20
                                    characters
                                </div>
                            </div>
                            <label class="form-label mt-3" for="password">Confirm password</label>
                            <div class="input-group">
                                <input class="form-control password" type="password" minlength="6" maxlength="20"
                                    name="password" required>
                                <span class="input-group-text eyeIcon"><i class="bi bi-eye-slash-fill"></i></span>
                                <div class="invalid-feedback" id="passwordHelp">Password must be 6-20
                                    characters
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-success w-100 mt-3" id="submit-btn">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>