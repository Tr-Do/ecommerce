<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-12 col-lg-7 mt-5">
            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                    <% product.images.forEach((img, i)=> { %>
                        <div class="carousel-item <%= i===0?'active':''%>">
                            <img src="<%=img.showPage%>" class="d-block w-100" alt="...">
                        </div>
                        <%})%>
                </div>
                <h2>Leave a review</h2>
                <form action="/products/<%=product._id%>/review" method="POST" class="mb-3 validated-form" novalidate>
                    <div class="mb-3">
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
                        </div>
                        <label for="body" class="form-label">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" required></textarea>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <button class="btn btn-success">Submit</button>
                </form>
                <% for (const review of product.reviews) { %>
                    <div class="mb-3">
                        <p>Rating: <%=review.rating%>
                        </p>
                        <p>
                            Review: <%=review.body%>
                        </p>
                    </div>
                    <%}%>
                        <% if(product.images.length>1){ %>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                                data-bs-slide="prev">
                                <i class="bi bi-chevron-left text-dark fs-1"></i>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                                data-bs-slide="next">
                                <i class="bi bi-chevron-right text-dark fs-1"></i>
                                <span class="visually-hidden">Next</span>
                            </button>
                            <%}%>
            </div>
        </div>
        <div class="col-12 col-lg-5 mb-5">
            <div class="card-body">
                <h5 class="card-title text-center">
                    <%=product.name%>
                </h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">
                    <h5>$<%=product.price%>
                    </h5>
                </li>
                <form action="/cart" class="d-flex flex-column justify-content-center" method="POST">
                    <% if (product.size.length>1) { %>
                        <div class="mt-3 d-flex justify-content-center gap-3">
                            <label class="form-label mt-2" for="size">Size:</label>
                            <div class="col-2">
                                <select class="form-select" name="size" id="size">
                                    <% product.size.forEach(s=> { %>
                                        <option value="<%=s%>">
                                            <%=s%>
                                        </option>
                                        <% })%>
                                </select>
                            </div>
                        </div>
                        <%} else {%>
                            <input type="hidden" name="size" value="Standard">
                            <%}%>
                                <input type="hidden" name="productId" value="<%=product._id%>">
                                <button class="btn btn-success mt-3 mb-3" id="add-to-cart" data-id="<%=product._id%>"
                                    data-size="<%=product.size%>">Add to cart</button>
                </form>
                <li class="list-group-item fw-bold">Product description</li>
                <li class="list-group-item">
                    <% product.description.split('\n').forEach(p=> { %>
                        <% if (p.trim()) { %>
                            <p class="mb-2">
                                <%= p %>
                            </p>
                            <% } %>
                                <% }) %>
                </li>
            </ul>
            <% if (currentUser) { %>
                <div class="card-body">
                    <a class="card-link btn btn-warning" href="/products/<%=product._id%>/edit">Edit</a>
                    <form action="/products/<%=product.id%>?_method=DELETE" method="POST" style="display:inline;"
                        onsubmit="return confirm('Are you sure you want to delete this product?')">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>

                <% } %>
        </div>
    </div>