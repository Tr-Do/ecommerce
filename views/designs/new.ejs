<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Design</h1>
        <div class="col-6 offset-3">
            <form action="/product" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="product[name]">
                </div>

                <div class="input-group mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" id="price" name="product[price]" class="form-control" placeholder="0.00">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="product[image]">
                </div>
                <button class="btn btn-success mb-3">Add Product</button>
            </form>
        </div>
    </div>