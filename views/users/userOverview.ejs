<% layout('layouts/boilerplate') %>
    <div>
        <div><button onclick="location.href='/admin/dashboard'" class="mt-3 btn btn-success btn-lg">Dashboard</button>
        </div>
        <h1 class="text-center my-4">Users Overview</h1>
    </div>
    <table id="userList" class="text-center mb-5">
        <tr>
            <th>Username</th>
            <th>Action</th>
            <th>Confirmation</th>
        </tr>
        <tbody>
            <%users.forEach(user=> {%>
                <form action='/admin/userOverview/<%=user._id%>' method="POST">
                    <tr>
                        <td>
                            <%=user.username%>
                        </td>
                        <td><select name="action" id="" class="text-center" required>
                                <option value="" disabled selected>-</option>
                                <option value="delete">Delete</option>
                                <option value="reset">Reset password</option>
                            </select></td>
                        <td>
                            <button type="submit" class="btn btn-info">Submit</button>
                        </td>
                    </tr>
                </form>
                <%}) %>
        </tbody>
    </table>

    <nav class="d-flex justify-content-center">
        <ul class="pagination">
            <!-- Previous -->
            <li class="mb-4 page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="<%= currentPage === 1 ? '#' : '?page=' + (currentPage - 1) %>">
                    Previous
                </a>
            </li>
            <!-- Page Numbers -->
            <% for (let i=1; i <=totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>">
                        <%= i %>
                    </a>
                </li>
                <% } %>
                    <!-- Next -->
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link"
                            href="<%= currentPage === totalPages ? '#' : '?page=' + (currentPage + 1) %>">
                            Next
                        </a>
                    </li>
        </ul>
    </nav>