<% layout('layouts/boilerplate') %>
    <div>
        <div><button onclick="location.href='/admin/dashboard'" class="mt-3 btn btn-success btn-lg">Dashboard</button>
        </div>
        <h1 class="text-center my-4">Users Overview</h1>
    </div>
    <table id="userList" class="text-center mb-5">
        <tr>
            <th>Username</th>
            <th>Action</th>
            <th>Confirmation</th>
        </tr>
        <tbody>
            <%users.forEach(user=> {%>
                <tr>
                    <form action='/admin/userOverview/<%=user._id%>' method="POST">
                        <td>
                            <%=user.username%>
                        </td>
                        <td><select name="action" id="" class="text-center" required>
                                <option value="" disabled selected>-</option>
                                <option value="delete">Delete</option>
                                <option value="resetPassword">Change password</option>
                            </select></td>
                        <td>
                            <button type="submit">Submit</button>
                        </td>
                </tr>
                </form>
                <%}) %>
        </tbody>
    </table>